
<!DOCTYPE html>
<html>
    <head>
        <title>Basic Auth</title>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
            <style type="text/css">
                .table td.text {
                    max-width: 150px;
                }
            .table td.text span {
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                display: inline-block;
                max-width: 100%;
            }
            </style>
    </head>
    
    <body class="container">
        #embed("header")
        <div class="row">
            <div class="col-lg-12 col-lg-10">
                <h2>Users' Messages</h2>
                <div class="panel panel-default">
                    
                    <table class="table">
                        <th class="success">ID</th>
                        <th class="success">Subject</th>
                        <th class="success">Message</th>
                        <th class="success">Email</th>
                        <th class="success">User</th>
                        <th class="success">delete</th>
                        #loop(messages, "message") {
                        <tr>
                            <td>#(message.id)</td>
                            <td class="text"><span>#(message.subject)</span></td>
                            <td>#(message.text)</td>
                            <td>#(message.email)</td>
                            <td>#(message.user_fullname)</td>
                            <td>
                                <form method="POST" action="delete/#(message.id)">
                                    <button class="btn btn-danger" type="submit" aria-label="glyphicon glyphicon-trash" value="Delete" ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> </button>
                                </form>
                            </td>
                        </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </body>
    
</html>


