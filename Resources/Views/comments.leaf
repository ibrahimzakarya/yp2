<!DOCTYPE html>
<html>
    <head>
        <title>Basic Auth</title>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
        <style type="text/css">
            .table td.text {
            max-width: 150px;
            }
            .table td.text span {
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                display: inline-block;
                max-width: 100%;
            }
        </style>
    </head>
    
    <body class="container">
        #embed("header")
        <div class="row">
            <div class="col-lg-12 col-lg-10">
                <h2>Users' Comments</h2>
                <div class="panel panel-default">
                    
                    <table class="table">
                        <th class="success">ID</th>
                        <th class="success">Comment Text</th>
                        <th class="success">By</th>
                        <th class="success">Place</th>
                        <th class="success">Update</th>
                        <th class="success">delete</th>
                        #loop(commnets, "commnet") {
                        <tr>
                            <td>#(commnet.id)</td>
                            <td class="text"><span>#(commnet.text)</span></td>
                            <td>#(commnet.user_fullname)</td>
                            <td>#(commnet.place_name)</td>
                            <td>
                                <form method="GET" action="edit/#(commnet.id)">
                                    <button class="btn btn-primary" type="submit" aria-label="glyphicon glyphicon-pencil" value="Delete" ><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> </button>
                                </form>
                            </td>
                            <td>
                                <form method="POST" action="delete/#(commnet.id)">
                                    <button class="btn btn-danger" type="submit" aria-label="glyphicon glyphicon-trash" value="Delete" ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> </button>
                                </form>
                            </td>
                        </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </body>
    
</html>


