
<!DOCTYPE html>
<html>
<head>
    <title>Basic Auth</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="style.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    <!-- <script src="https://maps.googleapis.com/maps/api/js?callback=myMap"></script> -->
    <style type="text/css"></style>
</head>

<body class="container">
    #embed("header")
    <div class="row">
        <div class="col-lg-12">
            <h2>Add New Place:</h2>
            <form id="user_form" method="POST" action="/place/add">
                <div class="col-lg-4">
                    <label for="name">Place Name</label>
                    <div class="form-group">
                        <input type="text" name="name" class="form-control" required>
                    </div>
                    <label for="address">Address</label>
                    <div class="form-group">
                        <textarea class="form-control" name="address" required></textarea>
                    </div>
                    <label for="phone">Phone</label>
                    <div class="form-group">
                        <input type="number" name="phone" class="form-control" required>
                    </div>
                    <label for="mobile">Mobile</label>
                    <div class="form-group">
                        <input type="number" name="mobile" class="form-control">
                    </div>
                    <label for="isactive">Is Active</label>
                    <div class="form-group">
                        <input type="checkbox" id="isactive">
                        <input type="hidden" name="is_active" id="is_active" value="0">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit">Save</button>
                    </div>
                </div>
                <div class="col-lg-4">
                    <label for="website">WebSite</label>
                    <div class="form-group">
                        <input type="text" name="website" class="form-control">
                    </div>
                    <label for="details">Details</label>
                    <div class="form-group">
                        <textarea class="form-control" name="details" required></textarea>
                    </div>
                    <label for="open_time">Open Time</label>
                    <div class="form-group">
                        <input  type="time" name="open_time" class="form-control">
                    </div>
                    <label for="close_time">Close Time</label>
                    <div class="form-group">
                        <input type="time" name="close_time" class="form-control">
                    </div>
                </div>
                <div class="col-lg-4">
                    <label>Location on the map</label>
                    <div id="googleMap" class="" style="width:100%;height:290px;"></div>
                </div>
                <input type="hidden" name="longitude" id="longitude" value="36.2765">
                <input type="hidden" name="latitude" id="latitude" value="33.5138">
            </form>
        </div>
    </div>
    <script type="text/javascript">
        var isActiveHiddenTag = document.getElementById("is_active");
        #equal(is_active, "0") {
            isActiveHiddenTag.setAttribute('value',"0");
        } ##else() {
            isActiveHiddenTag.setAttribute('value',"1");
        }
        document.getElementById("isactive").onchange = function() {
            if (document.getElementById("isactive").checked) {
                isActiveHiddenTag.setAttribute('value',"1");
            } else {
                isActiveHiddenTag.setAttribute('value',"0");
            }
        }
        var map;
        var myCenter;
        var marker;
        var longitude;
        var latitude;
        function myMap() {
            myCenter = new google.maps.LatLng(33.5138, 36.2765);
            var mapProp= {
                center: myCenter,
                zoom:10,
            };
            map = new google.maps.Map(document.getElementById("googleMap"), mapProp);
            google.maps.event.addListener(map, 'click', function(event) {
                placeMarker(event.latLng);
            });
        }
        function placeMarker(location) {
            document.getElementById("longitude").setAttribute('value', location.lng());
            document.getElementById("latitude").setAttribute('value', location.lat());
            if (!marker || !marker.setPosition) {
                marker = new google.maps.Marker({
                    position: location,
                    map: map
                });
            } else {
                marker.setPosition(location);
            }
        }
        $('.timepicker').timepicker({
            timeFormat: 'h:mm p',
            interval: 60,
            minTime: '10',
            maxTime: '6:00pm',
            defaultTime: '11',
            startTime: '10:00',

            dynamic: false,
            dropdown: true,
            scrollbar: true
        });
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD_sgLJKaWW9M_lesTNC34iQPxH9UJT8fc&callback=myMap"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <!-- <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script> -->
</body>
</html>

